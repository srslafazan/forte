<div id="giphy_carousel">
    <div id="shout_out">
        <h1>
            We connect experienced teachers with aspiring youth musicians to provide affordable music lessons for those who need it most.
        </h1>
        <button class="first forte-button-overlay">Learn</button>
        <button href="/teacher-login" class="forte-button-overlay">Teach</button>
    </div>
</div>
<div class="triangle">
    <div id="triangle"></div>
</div>
<div class="content">
    <div class="instruments">
    	<div id="slider1">
    		<a class="buttons prev" href="#"><%= image_tag("arrow-left.gif") %></a>
    		<div class="viewport">
    			<ul class="overview">
                    <li>
                        <%= image_tag("piano.gif", class: 'instrument') %>
                        <div class="label-card">
                            <h3>Piano</h3>
                            <button class='forte-button-round-small forte-button-overlay'>Learn</button>
                            <button class='forte-button-round-small forte-button-overlay'>Teach</button>
                        </div>
                    </li>
                    <li>
                        <%= image_tag("guitar.gif", class: 'instrument') %>
                        <div class="label-card">
                            <h3>Guitar</h3>
                            <button class='forte-button-round-small forte-button-overlay'>Learn</button>
                            <button class='forte-button-round-small forte-button-overlay'>Teach</button>
                        </div>
                    </li>
                    <li>
                        <%= image_tag("clarinet.gif", class: 'instrument') %>
                        <div class="label-card">
                            <h3>Clarinet</h3>
                            <button class='forte-button-round-small forte-button-overlay'>Learn</button>
                            <button class='forte-button-round-small forte-button-overlay'>Teach</button>
                        </div>
                    </li>
                    <li>
                        <%= image_tag("coming-soon.gif", class: 'instrument') %>
                        <div class="label-card-soon">
                            <h3>More Instruments Coming Soon!</h3>
                        </div>
                    </li>
    			</ul>
    		</div>
    		<a class="buttons next" href="#"><%= image_tag("arrow-right.gif") %></a>
    	</div>
    </div>
    <hr>
    <div class="inset">
        <div class="info">
            <h1>How It Works</h1>
            <p>
                We connect experienced teachers with aspiring youth musicians.
            </p>
        </div>
        <div class="info">
            <h1>Our Mission</h1>
            <p>
                To empower underpriviledged youth to discover, learn, and love music performance.
            </p>
        </div>
        <div class="info">
            <h1>Get Involved</h1>
            <p>
                Teach Students, learn an instrument, or donate to our cause.
            </p>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('#slider1').tinycarousel();
        $('#slider1 .label-card').hover(function(){
            $(this).animate({
                top: '0%'
            }, 600);
        }, function(){
            $(this).animate({
                top: '65%'
            }, 600);
        });
        $('#slider1 .label-card').click(function(){
            $(this).animate({
                top: '0%'
            }, 600);
        });
        var menu = true;
        $('.mobile-nav-trigger').on("click",function(){
            $('.mobile-menu').slideToggle("slow");
            if(menu){
                $('.mobile-nav-trigger').html("<i class='large material-icons'>close</i>");
                menu = false
            }else{
                $('.mobile-nav-trigger').html("<i class='large material-icons'>menu</i>");
                menu = true;
            }
        });
        $('a button').on("click",function(){
            $('.mobile-menu').hide();
            $('.mobile-nav-trigger').html("<i class='large material-icons'>menu</i>");
            menu = true
        });
        $('main').on("mouseover",function(){
            $('.mobile-menu').hide();
            $('.mobile-nav-trigger').html("<i class='large material-icons'>menu</i>");
            menu = true
        });
        $(function() {
            $("#modal-1").on("change", function() {
            if ($(this).is(":checked")) {
              $("body").addClass("modal-open");
            } else {
              $("body").removeClass("modal-open");
            }
            });

            $(".modal-fade-screen, .modal-close").on("click", function() {
            $(".modal-state:checked").prop("checked", false).change();
            });

            $(".modal-inner").on("click", function(e) {
            e.stopPropagation();
            });
        });
    });
</script>
