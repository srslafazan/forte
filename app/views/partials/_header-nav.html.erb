<header id='forte-header'>
<!-- forte logo -->
<div class="header_logo">
    <%= link_to(image_tag('forte_logo_not_logged.gif'), href="/")%>
</div>
<!-- teacher or student tag -->
<nav>
    <ul class="forte-nav">
        <!-- change menu items when logged in and not -->
        <li><a href="/about" class="animating-link">About Us</a></li>
        <li><a href="/contact" class="animating-link">Contact Us</a></li>
        <li><a class="forte-nav-link-bordered" href="/involve">Get Involved</a></li>
        <li>
            <div class="modal">
                <label for="modal-1">
                    <div class="modal-trigger">
                        <span  class="animating-link">Log In</span>
                    </div>
                </label>
                <input class="modal-state" id="modal-1" type="checkbox" />
                <div class="modal-fade-screen">
                    <div class="modal-inner" id='sign-in-modal-inner'>
                        <div class="modal-close" for="modal-1"></div>
                        
                        <section id="sign-in-modal-upper">
                            <%= image_tag('forte_logo_not_logged.gif') %>
                            <p class='forte-p-small forte-p-overlay'>Already have an account? <a href="">Log in</a></p>
                        </section>
                        <section id="sign-in-modal-lower">
                            <form action='' method='post'>
                                <input type='text'  name='name' class='forte-input' placeholder="First Name">
                                <input type='text'  name='name' class='forte-input' placeholder="Last Name">
                                <div>
                                    <input type='text'  name='name' class='forte-input' placeholder="Email">
                                </div>
                                <div class='student-teacher-switch'>
                                    <p class='forte-p-small'>Sign up as</p>
                                    <label class="label-switch">
                                      <input type="checkbox" checked=true name='student' />
                                      <div class="checkbox">
                                        <span class='switch-label switch-label-student'>Student</span>
                                        <span class='switch-label switch-label-teacher'>Teacher</span>
                                      </div>
                                    </label>
                                </div>
                                <input type='submit' value='Sign up'>
                                <p class='forte-p-small' id='sign-up-modal-cancel'><a href="" class='forte-link-gray'>Cancel</a></p>
                            </form>

                        </section>
                    </div>
                </div>
            </div>
        </li>
    </ul>
    <div class="mobile-nav">
        <button type="button" class="mobile-nav-trigger">
            <i class="large material-icons">menu</i>
        </button>
    </div>
</nav>
<div class="mobile-menu">
    <ul>
        <li><a href="/about">About Us</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/register">Sign Up</a></li>
        <li>
            <div class="modal">
                <label for="modal-mobile">
                    <div class="modal-trigger">
                        <span>Log In</span>
                    </div>
                </label>
                <input class="modal-state" id="modal-mobile" type="checkbox" />
                <div class="modal-fade-screen">
                    <div class="modal-inner">
                        <div class="modal-close" for="modal-mobile"></div>
